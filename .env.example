# Tags
TAG_SEARCH=search
TAG_DONE=done

# Run frequency
RUN_INTERVAL_MINUTES=60
WANTED_PAGE_SIZE=200
HTTP_TIMEOUT_SECONDS=30
LOG_LEVEL=INFO

# If true, don't actually trigger searches or retag, just log actions
DRY_RUN=false

# IMPORTANT: do NOT set RANDOM_SEED if you want different shuffle orders on restart
# RANDOM_SEED=1234

# State storage (persist with a volume mount)
STATE_DIR=/data/state

# Cooldown (hours). Set to 0 to disable cooldown entirely.
# Cooldown is optional even with shuffle-bag, but helps prevent re-hit due to eligible set churn.
DEFAULT_COOLDOWN_HOURS=0

# Optional per-app cooldown overrides
# SONARR_COOLDOWN_HOURS=24
# RADARR_COOLDOWN_HOURS=24
# LIDARR_COOLDOWN_HOURS=24

# Optional per-app + per-mode cooldown overrides (highest priority)
# SONARR_MISSING_COOLDOWN_HOURS=24
# SONARR_UPGRADES_COOLDOWN_HOURS=168
# RADARR_MISSING_COOLDOWN_HOURS=24
# RADARR_UPGRADES_COOLDOWN_HOURS=168
# LIDARR_MISSING_COOLDOWN_HOURS=24
# LIDARR_UPGRADES_COOLDOWN_HOURS=168

# Enable/disable apps
SONARR_ENABLED=true
RADARR_ENABLED=true
LIDARR_ENABLED=true

# App endpoints (service names on docker network are fine)
SONARR_URL=http://sonarr:8989
SONARR_API_KEY=CHANGE_ME

RADARR_URL=http://radarr:7878
RADARR_API_KEY=CHANGE_ME

LIDARR_URL=http://lidarr:8686
LIDARR_API_KEY=CHANGE_ME

# Integer limits: how many items to search each run
# Missing searches (tag=search)
SONARR_MISSING_LIMIT=4
RADARR_MISSING_LIMIT=10
LIDARR_MISSING_LIMIT=5

# Upgrade searches (tag=done)
SONARR_UPGRADES_LIMIT=0
RADARR_UPGRADES_LIMIT=0
LIDARR_UPGRADES_LIMIT=0

# Auto-promote search -> done when no missing remain
AUTO_PROMOTE_SEARCH_TO_DONE=true

# Integer limits: max promotions per run (avoid mass edits)
SONARR_PROMOTE_LIMIT=50
RADARR_PROMOTE_LIMIT=50
LIDARR_PROMOTE_LIMIT=50
